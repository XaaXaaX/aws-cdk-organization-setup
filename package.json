{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk:orga:run": "cdk --profile serverless --app 'npx ts-node --prefer-ts-exts ./cdk/bin/organization-setup.ts'",
    "cdk:orga": "npm run cdk:orga:run -- -c env=dev",
    "cdk:sso:run": "cdk --profile serverless --app 'npx ts-node --prefer-ts-exts ./cdk/bin/sso.ts'",
    "cdk:sso": "npm run cdk:sso:run -- -c env=dev"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "aws-cdk": "^2.176.0",
    "cdk-nag": "^2.34.23",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.731.1",
    "aws-cdk-lib": "^2.176.0",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  }
}
